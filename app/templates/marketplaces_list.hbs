<ul class="dropdown-menu">
	<li>
		<h4 class="label7a">Production</h4>
		<ul>
			{{#each user_marketplace in user.user_marketplaces}}
				{{#if user_marketplace.production}}
					<li class="label2a">
						{{#link-to 'activity' user_marketplace.id data-evt="Header-Marketplaces-Dropdown-Production-Marketplace"}}{{user_marketplace.name}}{{/link-to}}
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</li>

	<li>
		<h4 class="label7a">Test</h4>
		<ul>
			{{#each user_marketplace in user.user_marketplaces}}
				{{#unless user_marketplace.production}}
					<li class="label2a">
						{{#link-to 'activity' user_marketplace.id data-evt="Header-Marketplaces-Dropdown-Test-Marketplace"}}{{user_marketplace.name}}{{/link-to}}
					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</li>

	{{#unless auth.isGuest}}
		<li class="new label2d manage-marketplaces">{{#link-to 'marketplaces' data-evt="Header-Manage-Marketplaces"}}Manage marketplaces{{/link-to}}</li>
	{{/unless}}
</ul>
