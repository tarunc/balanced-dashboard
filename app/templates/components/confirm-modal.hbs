<div class="modal hide modal-confirm" data-backdrop="static" data-keyboard="false">
	<div class="modal-header">
		<h2>{{title}}</h2>
	</div>
	<div class="modal-body">
		<p class="text-center label3a">{{mainText}}</p>
		<div class="actions">
			<button data-evt="General-Confirm-Modal-Cancel" class="btn btn-cancel" {{action "cancel" on="click" target="view"}}>Cancel</button>
			<button data-evt="General-Confirm-Modal-Yes" class="btn" {{action "confirm" on="click" target="view"}}>Yes</button>
		</div>
	</div>
</div>
