<div class="dispute">
	<div {{bind-attr class=":transaction-type-subheader dispute.status"}}>
		<div class="tt-label">Dispute</div>
		<div class="tt-content">
			<span class="tt-title">
				{{titleCase dispute.status}}: {{formatCurrency dispute.amount}}
			</span>
		</div>
	</div>
	<div class="transaction-body">
		<div class="row-fluid">
			<div class="span25 border-adjust">
				{{#if dispute.is_pending}}
					<section class="evidence-portal-info clearfix">
						<div class="span13">
							<header>
								<h3>Please provide supporting documentation:</h3>
							</header>
							<ul>
								<li>Shipping receipts with shipping address and tracking numbers</li>
								<li>Evidence of received goods or services purchased</li>
							</ul>
						</div>
						<div class="span12">
							<header>
								<h3>Submit documentation by:</h3>
								<a class="btn pull-right sm" href="#" {{action "openEvidencePortalModal"}}>Attach Doc</a>
							</header>
							<div>
								<h4>{{humanReadableDateLong dispute.respond_by}}</h4>
								<p>The dispute will most likely result in a lost if you do not respond by this date.</p>
							</div>
						</div>
					</section>
				{{/if}}
				<section class="transaction-info">
					<div class="key-value-display">
						<header>
							<h3>Dispute</h3>
						</header>
						<dl class="dl-horizontal">
							<dt>Initiated</dt>
							<dd><span>{{humanReadableDateLong dispute.initiated_at}}</span></dd>

							<dt>Respond By</dt>
							<dd><span>{{humanReadableDateLong dispute.respond_by}}</span></dd>

							<dt>Reason</dt>
							<dd><span>{{dispute.reason}}</span></dd>

							<dt>ID</dt>
							<dd><span>{{dispute.id}}</span></dd>

							<dt>Meta</dt>
							<dd><span>
								{{#each meta in dispute.meta_array}}
									{{meta.key}}: {{meta.value}}<br/>
								{{/each}}
							</span></dd>
						</dl>
					</div>
				</section>
				{{txn-funding-instrument funding_instrument=dispute.transaction.source}}
			</div>
		</div>
		<div class="row-fluid">
			<div class="span25 border-adjust">
				{{view Balanced.ResourceLogsView contentBinding="dispute"}}
			</div>
		</div>
		<div class="row-fluid">
			<div class="span25 border-adjust">
				{{view Balanced.ResourceEventsView contentBinding="dispute"}}
			</div>
		</div>
	</div>

	{{view Balanced.EvidencePortalModalView disputeBinding="dispute"}}
</div>
