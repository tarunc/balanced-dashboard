<div class="modal hide wide-modal" id="evidence-portal">
	<form>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h2>Attach documents</h2>
		</div>

		<div class="modal-body modal-with-headers">
			{{#if view.model.displayErrorDescription}}
				<div class="alert alert-error row-full">
					{{view.model.errorDescription}}
				</div>
			{{/if}}
			<div class="modal-content">
				<p>
					Please attach supporting documentation to fight this dispute. You can only submit this information once. You will not be able to add to or modify your files once you click "Submit."
				</p>

				<hr class="separation-line" />

				<div {{bind-attr class=":clearfix :control-group view.model.validationErrors.note:error"}}>
					<label class="control-label clearfix">
						Total documents: {{formatNumber view.validDocumentCount}} (Max: {{formatNumber view.maxDocumentCount}})
					</label>
					<div class="controls results results-framed">
						<table class="table table-fixed table-border items">
							<thead>
								<tr>
									<th class="span8"><span>File (PDF / DOC / JPEG)</span></th>
									<th class="span3"><span>Size (Max: 10 MB)</span></th>
									<th class="span1"><span>&nbsp;</span></th>
								</tr>
							</thead>
							<tbody>
								{{#each doc in view.documents}}
									<tr {{bind-attr class=":table-row doc.isError:error"}}>
										<td class="name">
											<span>
												{{doc.name}}

												{{#if doc.errorDescription}}
													<span class="error">({{doc.errorDescription}})</span>
												{{/if}}
											</span>
										</td>
										<td class="size"><span>{{doc.size}}</span></td>
										<td>
											{{#if doc.isUploading}}
												<div class="loader-container">
													<span class="loader loading"></span>
												</div>
											{{else}}
												<span><a class="delete" href="#" {{action "deleteDocument" doc target="view"}}>&times;</a></span>
											{{/if}}
										</td>
									</tr>
								{{else}}
									<tr>
										<td colspan="3" class="no-results">None</td>
									</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
					<div class="pull-right">
						<span class="btn fileinput-button btn-sm right">
							<span>Attach documents</span>
							<input id="fileupload" type="file" name="files[]" multiple>
						</span>
					</div>
				</div>
				<div {{bind-attr class=":control-group view.model.validationErrors.note:error"}}>
					<label class="control-label">Note</label>
					<div class="controls row-fluid">
						{{view Ember.TextArea valueBinding="view.model.note" name="note" class="span" placeholder="Describe your case."}}
						<div {{bind-attr class=":alert :alert-error :row-full :label4b view.hasValidDocument::in"}}>Submitting without documentation will greatly reduce your chances of winning the dispute.</div>
					</div>
				</div>
			</div>
		</div>

		<div class="modal-footer">
			{{view Balanced.ModalActionButtonsView submitTitle="Submit"}}
		</div>
	</form>
</div>
