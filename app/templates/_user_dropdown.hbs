{{#if auth.signedIn}}
	<a data-evt="Header-User-Dropdown-Menu" href="#" data-toggle="dropdown" class="dropdown-toggle gravatar">
		<span class="icon profile"><img {{bind-attr src=user.gravatar}}></span>
		<b class="caret"></b>
	</a>
	<ul class="dropdown-menu">
		{{#if auth.isGuest}}
			<li>{{#link-to 'claim' class="label2a" data-evt="Header-Claim-Account"}}Claim account{{/link-to}}</li>
		{{else}}
			<li class="change-password">
				<a data-evt="Header-Change-Password-Modal-Open" class="label2a" href="#" {{action "openChangePasswordModal" target="controllers.marketplaces"}}>Change password</a>
			</li>
			<li>{{#link-to 'accountSecurity' class="label2a" data-evt="Header-Account-Security"}}Account Security{{/link-to}}</li>
		{{/if}}

		<li><a data-evt="Header-Logout" class="label2a" href="#" {{action "signOut"}}>Log Out</a></li>
	</ul>
{{else}}
	{{#link-to 'login' class="nav1d" data-evt="Header-Login"}}Login{{/link-to}}
{{/if}}
